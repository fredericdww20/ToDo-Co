<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>To Do List app</title>

    <!-- Bootstrap CSS -->
    <link href="{{ asset('/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('css/custom.css') }}" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">To Do List app</a>
        <img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms" />

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('user_create') }}">Créer un utilisateur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('user_list') }}">Voir les utilisateurs</a>
                    </li>
                {% endif %}
                {% if app.user %}
                    <li class"nav-item">
                        <a class="nav-link" href="{{ path('task_list') }}">Liste des tâches</a>
                    </li>
                     <li class"nav-item">
                        <a class="nav-link" href="{{ path('task_completed_list') }}">Liste des tâches terminées</a>
                    </li>
                    <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('logout') }}">Se déconnecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}">Se connecter</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<h1>Welcome to Symfony</h1>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success" role="alert">
                    <strong>Superbe !</strong> {{ flash_message }}
                </div>
            {% endfor %}

            {% for flash_message in app.session.flashBag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    <strong>Oops !</strong> {{ flash_message }}
                </div>
            {% endfor %}

            <div class="text-center">
                {% block header_title %}{% endblock %}
                {% block header_img %}
                    <img class="img-fluid" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list">
                {% endblock %}
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>
<!-- /.container -->

<footer class="footer mt-4 bg-light">
    <div class="container text-center">
        <hr>
        <p>&copy; OpenClassrooms - {{ "now"|date("Y") }}</p>
    </div>
</footer>

<!-- Bootstrap Bundle with Popper -->
<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>
